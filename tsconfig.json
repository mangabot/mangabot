{
    "compilerOptions": {
        "target": "es5",
        "module": "system",
        "moduleResolution": "node",
        "sourceMap": true,
        "declaration": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "removeComments": true,
        "noImplicitAny": true,
        "listFiles": true,
        "rootDir": "src/app",
        "outDir": "build"
    },
    "exclude": [
        "node_modules"
    ]
}